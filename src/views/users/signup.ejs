<% layout("/layouts/boilerplate") %> 
    <div class=" mt-3">
        <h2 class="col-6 offset-3">SignUp on Wanderlust!</h2>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" novalidate  class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input type="text" name="username" placeholder="username" class="form-control" required>
                    <div class="valid-feedback">username looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input type="email" name="email" placeholder="email" class="form-control" required>
                    <div class="valid-feedback">email looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input type="password" name="password" placeholder="password" class="form-control" required>
                    <div class="valid-feedback">password looks good!</div>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>
 

